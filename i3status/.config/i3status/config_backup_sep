general {
  colors = true
  interval = 5
}

order += "cpu_usage"
order += "memory"
order += "battery 0"
order += "tztime local"

cpu_usage {
  format = "CPU: %usage"
}

memory {
  format = "RAM: %used/%total"
}

battery 0 {
  format = "BAT: %percentage %remaining"
}

tztime local {
  format = "%H:%M"
}
